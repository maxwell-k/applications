#!/bin/sh
# Usage: ./pipcompilewrapper
# update commit with `git ls-remote git://github.com/fsfe/reuse-tool.git HEAD`
commit=d2ca6f6e4da3fee15e7e09ba8b6447632460cb74
CUSTOM_COMPILE_COMMAND="./pipcompilewrapper" pip-compile &&
echo git+git://github.com/fsfe/reuse-tool.git@$commit#Egg=fsfe-reuse |
tee -a requirements.txt

